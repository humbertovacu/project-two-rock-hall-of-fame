<h1>The bands list page</h1>


{{!-- Research a band --}}
<form method="GET" action="/bands/search">
    <input name="bandName" type="text">
    <button>Search Band</button>
</form>

{{!-- Create a Band --}}
<div>
<a href="bands/new-band"><button>Create a Band!</button></a>
</div>

{{!-- Display all bands --}}
<div class="list-of-bands">
  {{#each bands}}
  <div>
    <a href="/bands/{{_id}}"><h2>{{name}}</h2></a>
    <a href="/bands/{{_id}}"><img src={{imageUrl}} alt={{name}} "picture" width=300px height="auto"></a>
    
  </div>
  {{/each}}
</div>