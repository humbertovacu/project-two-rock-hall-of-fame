<h1>Band Details Page</h1>
<br />
<h2>{{singleBand.name}}</h2>

<img src={{singleBand.imageUrl}} alt={{singleBand.name}} "picture" width=300px height="auto">

<h3>Origin:</h3>
<p>{{singleBand.origin}}</p>
<h3>Year:</h3>
<p>{{singleBand.year}}</p>
<h3>Members:</h3>
{{#each singleBand.members}}
<a href="/artists/{{id}}">{{name}}</a>
{{/each}}
<h3>Genre:</h3>
<p>{{singleBand.genre}}</p>

{{!-- Edit a Band --}}
<div>
<a href="/bands/{{singleBand._id}}/edit"><button class="regular-btn">Edit</button></a>
</div>
<br>

{{!-- Delete a Band --}}
<form action="/bands/{{singleBand._id}}/delete" method="POST">
    <button class="regular-btn">Delete</button>
</form>