<h1>Edit Band</h1>
<form action="/bands/{{band._id}}" method="post" id="editBandForm" enctype="multipart/form-data">
    <label for="edit-band-name">Band Name:
        <input type="text" name="name" id="edit-band-name" value="{{band.name}}">
    </label> 
    <br>
    <img src="{{band.imageUrl}}" alt="{{band.name}}-image" width="400" height="auto">
    <br>
    <label for="edit-band-picture"> Change Band Picture:
        <input type="file" name="band-profile-picture" id="edit-artist-picture">
    </label>
    <br>
    <label for="edit-band-origin"> Band origin:
        <input type="text" name="origin" id="edit-band-origin" value="{{band.origin}}">
    </label>
    <br>
     <label for="edit-band-year"> Year:
        <input type="type" name="year" id="edit-band-year" value="{{band.year}}">
     </label>
    <br>
    <label for="edit-band-members" id="add-member-label"> Band Members:
        <br>
        {{#each band.members}}
          <input type="checkbox" name="originalMembers[]" value="{{_id}}" checked>
          <label for="member-{{@index}}">{{name}}</label><br>
        {{/each}}
        
        {{!-- <input type="hidden" name="originalMembers[]" id="edit-band-members" list="artists-list" value="{{#each band.members}}{{_id}},{{/each}}"> --}}
        <input type="text" name="members[]" id="edit-band-members" list="artists-list">
        <datalist id="artists-list">
            {{#each allArtists}}
                <option value="{{name}}">{{name}}</option>
            {{/each}}
        </datalist>
    </label>
        <button type="button" id="add-member-btn">+</button>
    <br>
     <label for="edit-band-genre"> Genre:
        <select form="edit-band-genre" name="genre" id="edit-band-genre" multiple>
            <option value="Alternative Rock" selected>Alternative Rock</option>
            <option value="Art Rock">Art Rock</option>
            <option value="Blues">Blues</option>
            <option value="Blues Rock">Blues Rock</option>
            <option value="Celtic Rock">Celtic Rock</option>
            <option value="Country">Country</option>
            <option value="Country Rock">Country Rock</option>
            <option value="Electronica">Electronica</option>
            <option value="Experimental Rock">Experimental Rock</option>
            <option value="Folk">Folk</option>
            <option value="Folk Rock">Harmonica</option>
            <option value="Glam Rock">Glam Rock</option>
            <option value="Gothic Rock">Gothic Rock</option>
            <option value="Hard Rock">Hard Rock</option>
            <option value="Indie Pop">Indie Pop</option>
            <option value="Indie Rock">Indie Rock</option>
            <option value="Jazz">Jazz</option>
            <option value="Latin Jazz">Latin Jazz</option>
            <option value="Latin Rock">Latin Rock</option>
            <option value="Metal">Metal</option>
            <option value="New Wave">New Wave</option>
            <option value="Noise Pop">Noise Pop</option>
            <option value="Noise Rock">Noise Rock</option>
            <option value="Pop">Pop</option>
            <option value="Post Punk">Post Punk</option>
            <option value="Progressive Rock">Progressive Rock</option>
            <option value="Psychedelic Rock">Psychedelic Rock</option>
            <option value="Punk Rock">Punk Rock</option>
            <option value="Rhythm & Blues">Rhythm & Blues</option>
            <option value="Rock">Rock</option>
            <option value="Rock & Roll">Rock & Roll</option>
            <option value="Surf Rock">Surf Rock</option>
            <option value="Synthpop">Synthpop</option>
        </select>
     </label>
     <br>
     </label>
     <button type="submit">Edit Band</button>
</form>

 
 <script src="/js/edit-band-script.js"></script>